<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backback"
    tools:context=".MyInformationRevise">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="65dp"
        android:layout_height="91dp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/textUserID4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iceman" />

    <Button
        android:id="@+id/authenticationBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAuthentication"
        android:text="인증하기"
        android:background="#254C9E"
        android:textColor="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="@+id/authenticationNo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/authenticationNo2"
        app:layout_constraintTop_toTopOf="@+id/authenticationNo2" />

    <Button
        android:id="@+id/receiveBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickReceive"
        android:text="인증번호 받기"
        android:background="#254C9E"
        android:textColor="#DCDCDC"
        app:layout_constraintBottom_toBottomOf="@+id/editTextPNRevise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextPNRevise"
        app:layout_constraintTop_toTopOf="@+id/editTextPNRevise" />

    <EditText
        android:id="@+id/authenticationNo2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textView28"
        app:layout_constraintEnd_toEndOf="@+id/editTextPNRevise"
        app:layout_constraintStart_toStartOf="@+id/editTextPNRevise"
        app:layout_constraintTop_toTopOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="인증번호"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/printPN2" />

    <Button
        android:id="@+id/reviseBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:onClick="onClickRevise"
        android:text="수정하기"
        android:background="#254C9E"
        android:textColor="#DCDCDC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authenticationNo2" />

    <EditText
        android:id="@+id/editTextPNRevise"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="13"
        app:layout_constraintBottom_toBottomOf="@+id/printPN2"
        app:layout_constraintEnd_toEndOf="@+id/editTextBirthRevise"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextBirthRevise"
        app:layout_constraintTop_toTopOf="@+id/printPN2" />

    <TextView
        android:id="@+id/printPN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="전화번호"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/printPassword2" />

    <EditText
        android:id="@+id/editTextBirthRevise"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/printPassword2"
        app:layout_constraintEnd_toEndOf="@+id/editTextPWRevise"
        app:layout_constraintStart_toStartOf="@+id/editTextPWRevise"
        app:layout_constraintTop_toTopOf="@+id/printPassword2" />

    <TextView
        android:id="@+id/printPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="생년월일"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/printBirth2" />

    <EditText
        android:id="@+id/editTextPWRevise"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/printBirth2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/printBirth2" />

    <TextView
        android:id="@+id/printBirth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="비밀번호"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider13" />

    <View
        android:id="@+id/divider13"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="64dp"
        android:background="@color/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:text=" 내 정보 수정"
        android:textColor="#000005"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="88dp"
        android:background="@color/txtTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="onClickLogout"
        android:text="로그아웃"
        android:background="#254C9E"
        android:textColor="#DCDCDC"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textUserID4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="ID님"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textState2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/authenticationNo2"
        app:layout_constraintStart_toStartOf="@+id/authenticationNo2"
        app:layout_constraintTop_toBottomOf="@+id/authenticationNo2" />
</androidx.constraintlayout.widget.ConstraintLayout>